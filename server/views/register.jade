extends layout
block content
  div.errors
    if errors
     each error, i in errors
       div.alert.alert-danger #{error.msg}
  h1.page-header register
  p Please register using the form below
  .container 
   form(method="post",action="/users/register",enctype="multipart/form-data")
      .form-row
        .form-group.col-md-6
          label(for='inputEmail4') Name
          input#inputEmail4.form-control(type='text', placeholder='Name' name="name")
        .form-group.col-md-6
          label(for='inputEmail4') Email
          input#inputEmail4.form-control(type='email', placeholder='Email' name="username")
      .form-row    
         .form-group.col-md-4
          label(for='inputPassword4') Password
          input#inputPassword4.form-control(type='password', placeholder='Password',name="password")  
         .form-group.col-md-4
          label(for='inputPassword5') Confirm password
          input#inputPassword5.form-control(type='password', placeholder='Confirm password',name="confirmPassword")  
      .form-group
        .custom-file
           input#customFile.custom-file-input(type='file',name="profileImage")
           label.custom-file-label(for='customFile') Choose a profile image
      button.btn.btn-primary(type='submit') Register
